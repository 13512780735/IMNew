<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@drawable/rc_bg_toast"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bcr.jianxinIM.im.server.widget.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="@dimen/width40"
            android:layout_height="@dimen/width40"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            wheel:matProg_barColor="@color/white"
            wheel:matProg_progressIndeterminate="true" />



    </LinearLayout>
    <TextView
        android:id="@+id/show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/layout_dialog_loading"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"
        />
</LinearLayout>
