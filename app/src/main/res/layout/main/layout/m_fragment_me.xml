<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llUserInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width80"
        android:background="@color/button_bg"
        android:orientation="horizontal">

        <com.bcr.jianxinIM.view.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/width60"
            android:layout_height="@dimen/width60"
            android:src="@mipmap/icon_wangwang"
            android:layout_margin="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="木头人"
                android:id="@+id/tvName"
                android:textColor="@color/white"
                android:gravity="bottom"
                android:paddingBottom="@dimen/dp_5"
                android:textSize="@dimen/txt_16"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:paddingTop="@dimen/dp_5"
                android:gravity="top"
                android:text="ID:111155"
                android:layout_weight="1"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/ivScanCode"
            android:layout_width="@dimen/width25"
            android:layout_height="@dimen/width25"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_scancode_white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_white_right"
            android:layout_margin="@dimen/dp_10"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFriends"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="@dimen/width50">

        <ImageView
            android:layout_width="@dimen/width20"
            android:layout_height="@dimen/width20"
            android:src="@mipmap/icon_me_friends"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/icon_right"
            android:text="好友动态"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llWallet"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:visibility="gone"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="@dimen/width50">

        <ImageView
            android:layout_width="@dimen/width20"
            android:layout_height="@dimen/width20"
            android:src="@mipmap/icon_me_wallet"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/icon_right"
            android:text="我的钱包"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/width50"
            android:background="@color/listview_divider"></View>
        <LinearLayout
            android:id="@+id/llCollect"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_height="@dimen/width50">

            <ImageView
                android:layout_width="@dimen/width20"
                android:layout_height="@dimen/width20"
                android:src="@mipmap/icon_me_collection"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:drawableRight="@mipmap/icon_right"
                android:text="我的收藏"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/width50"
            android:background="@color/listview_divider"></View>
        <LinearLayout
            android:id="@+id/llSetting"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_height="@dimen/width50">

            <ImageView
                android:layout_width="@dimen/width20"
                android:layout_height="@dimen/width20"
                android:src="@mipmap/icon_me_setting"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:drawableRight="@mipmap/icon_right"
                android:text="设置"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/width50"
            android:background="@color/listview_divider"></View>
        <LinearLayout
            android:id="@+id/llHelp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_height="@dimen/width50">

            <ImageView
                android:layout_width="@dimen/width20"
                android:layout_height="@dimen/width20"
                android:src="@mipmap/icon_me_hlep"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:drawableRight="@mipmap/icon_right"
                android:text="帮助和反馈"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/width50"
            android:background="@color/listview_divider"></View>
        <LinearLayout
            android:id="@+id/llAbout"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_height="@dimen/width50">

            <ImageView
                android:layout_width="@dimen/width20"
                android:layout_height="@dimen/width20"
                android:src="@mipmap/icon_me_about"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:drawableRight="@mipmap/icon_right"
                android:text="关于我们"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/width50"
            android:background="@color/listview_divider"></View>
    </LinearLayout>
</LinearLayout>