<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".view.photoview.ViewPagerActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/button_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolbar_left_iv"
            android:layout_width="@dimen/width25"
            android:layout_height="@dimen/width25"
            android:layout_gravity="center"
            android:src="@mipmap/ic_back_02" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="12"
            android:singleLine="true"
            android:text="XXX"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_16" />

        <ImageView
            android:id="@+id/toolbar_right_iv"
            android:layout_width="@dimen/width30"
            android:layout_height="@dimen/width30"
            android:layout_gravity="center"
            android:src="@mipmap/ic_back_02"
            android:visibility="invisible" />
    </LinearLayout>


    <com.bcr.jianxinIM.view.photoview.PhotoViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
