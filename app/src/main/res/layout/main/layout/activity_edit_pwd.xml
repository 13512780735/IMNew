<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.main.EditPwdActivity">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/rl_titlebar"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width45"
            android:background="@color/white"

            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="旧密码"
                android:gravity="center|left"
                android:layout_gravity="left"
               />
            <com.bcr.jianxinIM.im.server.widget.ClearWriteEditText
                android:id="@+id/edOldPwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/txt_14"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:hint="请填写旧密码(最少8位)"
                android:background="@null"/>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/listview_divider"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width45"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="新密码"
                    android:layout_gravity="left"
                    android:gravity="center|left"
                    />
                <com.bcr.jianxinIM.im.server.widget.ClearWriteEditText
                    android:id="@+id/edNewPwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/txt_14"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:hint="请填写新密码(最少8位)"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/listview_divider"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width45"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="确认密码"
                    android:gravity="center|left"
                    />
                <com.bcr.jianxinIM.im.server.widget.ClearWriteEditText
                    android:id="@+id/edConfirmPwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/txt_14"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:hint="请再次确认密码(最少8位)"
                    android:background="@null"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical">
            <com.bcr.jianxinIM.view.BorderTextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width45"
                android:layout_marginLeft="@dimen/dip_large"
                android:layout_marginRight="@dimen/dip_large"
                android:layout_marginTop="40dip"
                android:gravity="center"
                app:contentBackColor="#999999"
                app:cornerRadius="@dimen/dp_5"
                android:padding="10dip"
                android:textSize="@dimen/txt_16"
                android:text="确定"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llLoadingBg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:alpha="0.2"
        android:background="@drawable/border_radius_loading_bg"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/alLoginLoading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:indicatorName="BallSpinFadeLoaderIndicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout7" />
</android.support.constraint.ConstraintLayout>